<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/chat_room_name_waiting"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/button_style_background"
        android:gravity="center"
        android:text="@string/room_name"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/waiting_user"
        android:layout_width="125dp"
        android:layout_height="44dp"
        android:layout_alignEnd="@+id/chat_room_name_waiting"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="234dp"
        android:layout_marginBottom="48dp"
        android:gravity="center|end"
        android:text="@string/username"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/richiesta"
        android:layout_width="216dp"
        android:layout_height="45dp"
        android:layout_alignStart="@+id/chat_room_name_waiting"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="149dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="47dp"
        android:gravity="center|start"
        android:text="vuole accedere a:"
        android:textColor="@color/white"
        android:textSize="20sp" />

</RelativeLayout>

